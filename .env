# Environment Configuration
# Week 5 - Database and Performance Optimization

# Application Settings
NODE_ENV=development
PORT=4001
DOCUMENTS_PORT=4002

# Database Configuration
DATABASE_URL="postgresql://postgres:password@localhost:5432/training_platform?schema=public"

# Prisma Configuration
PRISMA_CONNECTION_LIMIT=10
PRISMA_POOL_TIMEOUT=20000
PRISMA_QUERY_TIMEOUT=10000

# Redis Configuration
REDIS_URL="redis://localhost:6379"
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_CONNECT_TIMEOUT=10000
REDIS_COMMAND_TIMEOUT=5000
REDIS_RETRY_ATTEMPTS=3
REDIS_RETRY_DELAY=1000

# Cache Configuration
CACHE_TTL_DEFAULT=3600
CACHE_TTL_SESSION=86400
CACHE_TTL_QUERY=1800
CACHE_TTL_USER=7200
CACHE_TTL_COMPANY=14400
CACHE_MAX_MEMORY_SIZE=100

# Performance Monitoring
PERFORMANCE_MONITORING_ENABLED=true
SLOW_QUERY_THRESHOLD=1000
SLOW_REQUEST_THRESHOLD=2000
MEMORY_ALERT_THRESHOLD=500
ERROR_RATE_THRESHOLD=5
CACHE_HIT_RATE_THRESHOLD=70

# Session Configuration
SESSION_SECRET=super-secret-session-key-for-development-change-in-production-2024
SESSION_MAX_AGE=86400000
SESSION_SECURE=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# Google API Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:4001/auth/google/callback

# JWT Configuration
JWT_SECRET=super-secret-jwt-key-for-development-change-in-production-2024
JWT_REFRESH_SECRET=super-secret-jwt-refresh-key-for-development-change-in-production-2024
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Security Configuration
CORS_ORIGIN=http://localhost:5173
HELMET_ENABLED=true
CSRF_PROTECTION_ENABLED=true

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=pdf,doc,docx,xls,xlsx,ppt,pptx,jpg,jpeg,png,gif

# Email Configuration (if needed)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Development Settings
DEBUG_ENABLED=true
DEBUG_SQL=false
DEBUG_CACHE=false
DEBUG_REDIS=false

# Production Settings (override in production)
# NODE_ENV=production
# REDIS_URL=redis://your-redis-instance:6379
# DATABASE_URL=postgresql://user:pass@your-db-host:5432/dbname
# SESSION_SECURE=true
# CORS_ORIGIN=https://your-domain.com
# LOG_LEVEL=warn