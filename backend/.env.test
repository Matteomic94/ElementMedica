# Test Environment Configuration
NODE_ENV=test

# Test Database (PostgreSQL)
DATABASE_URL="postgresql://postgres:Fulmicotone50!@localhost:5432/projectdb_test"
TEST_DATABASE_URL="postgresql://postgres:Fulmicotone50!@localhost:5432/projectdb_test"

# JWT Configuration for tests
JWT_SECRET="test-jwt-secret-key"
JWT_REFRESH_SECRET="test-refresh-secret-key"
JWT_ACCESS_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Encryption Configuration for tests
ENCRYPTION_KEY="test-32-character-encryption-key"
ENCRYPTION_ALGORITHM="aes-256-gcm"

# Disable Redis for tests
REDIS_ENABLED=false

# GDPR Configuration for tests
GDPR_RETENTION_DAYS="30"
GDPR_ADMIN_EMAIL="test@example.com"
GDPR_COMPANY_NAME="Test Company"
GDPR_COMPANY_ADDRESS="Test Address"
GDPR_DPO_EMAIL="dpo@test.com"

# Session Management for tests
SESSION_TIMEOUT_MINUTES="30"
MAX_CONCURRENT_SESSIONS="5"
FAILED_LOGIN_ATTEMPTS="5"
LOCKOUT_DURATION_MINUTES="15"

# Rate Limiting for tests
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="1000"
RATE_LIMIT_SKIP_SUCCESSFUL="true"

# API Versioning for tests
API_VERSION_DEFAULT="v1"
API_DEPRECATION_NOTICE_DAYS="90"
